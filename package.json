{
  "name": "curso-angular-15",
  "license": "NO LICENSE",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "server": "json-server --watch data/db.json",
    "clean": "rimraf build",
    "build": "yarn run clean && webpack",
    "serve:dev": "webpack-dev-server --port 7070 -d -w --inline --content-base src/main/",
    "serve:build": "http-server build -p 7071 -o",
    "lint": "eslint src/main/**/*.js",
    "test": "mocha --require src/test/utils/mocha-helper.js --compilers js:babel-register --colors src/**/*-test.js",
    "test:report": "mocha -R xunit --reporter-options output=test_results.xml --require src/test/utils/mocha-helper.js --compilers js:babel-register --colors src/**/*-test.js",
    "coverage": "cross-env NODE_ENV=test nyc --all npm test"
  },
  "dependencies": {
    "angular": "<1.6.0",
    "angular-animate": "<1.6.0",
    "angular-aria": "<1.6.0",
    "angular-material": "^1.1.1",
    "angular-ui-router": "^1.0.0-alpha.5",
    "jjv": "^1.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.0",
    "crypto-js": "^3.1.9-1",
    "css-loader": "^0.25.0",
    "eslint": "^3.19.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.24.1",
    "http-server": "^0.10.0",
    "istanbul": "^0.4.5",
    "json-loader": "^0.5.4",
    "json-server": "^0.10.1",
    "mocha": "^3.1.2",
    "node-sass": "^3.12.2",
    "nyc": "^10.3.2",
    "q": "^1.4.1",
    "requestretry": "^1.12.0",
    "rimraf": "^2.5.4",
    "rollbar": "^2.0.0",
    "rollbar-sourcemap-webpack-plugin": "^2.0.1",
    "sass-loader": "^4.0.2",
    "should": "^11.1.2",
    "sinon": "^2.2.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "src/main/app.js",
      "src/main/utils.js",
      "src/main/logging/*",
      "src/main/**/*-test.js",
      "src/main/**/*-module.js",
      "src/test/utils/*"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "cobertura",
      "html"
    ],
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "check-coverage": true
  }
}
